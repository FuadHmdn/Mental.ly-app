<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Status ketika RadioButton dipilih -->
    <item android:state_checked="true">
        <shape>
            <stroke android:width="2dp" android:color="@color/md_theme_errorContainer_mediumContrast" />
            <solid android:color="@color/md_theme_primaryContainer_mediumContrast" />
            <corners android:radius="16dp" />
            <padding android:left="16dp" android:right="16dp" android:top="8dp" android:bottom="8dp" />
        </shape>
    </item>

    <!-- Status ketika RadioButton tidak dipilih -->
    <item>
        <shape>
            <stroke android:width="2dp" android:color="@color/md_theme_secondary_highContrast" />
            <solid android:color="@color/md_theme_background" />
            <corners android:radius="12dp" />
            <padding android:left="16dp" android:right="16dp" android:top="8dp" android:bottom="8dp" />
        </shape>
    </item>
</selector>
